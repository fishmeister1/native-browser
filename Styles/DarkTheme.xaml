<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Color Brushes - Dark Gray Theme -->
    
    <!-- Primary Dark Grays -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#3E3E42"/>
    
    <!-- Title Bar Colors -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TitleForegroundBrush" Color="#CCCCCC"/>
    
    <!-- Content Area Colors -->
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="ContentForegroundBrush" Color="#CCCCCC"/>
    
    <!-- Navigation Bar Colors -->
    <SolidColorBrush x:Key="NavigationBarBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="NavigationButtonForegroundBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="NavigationButtonHoverBackgroundBrush" Color="#3E3E42"/>
    
    <!-- Browser Content Colors -->
    <SolidColorBrush x:Key="BrowserContentBackgroundBrush" Color="#1E1E1E"/>
    
    <!-- Status Bar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FFFFFF"/>
    
    <!-- Control Button Colors -->
    <SolidColorBrush x:Key="ControlButtonForegroundBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ControlButtonHoverBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="CloseButtonHoverBackgroundBrush" Color="#E81123"/>
    
    <!-- Address Bar Colors -->
    <SolidColorBrush x:Key="AddressBarBackgroundBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="AddressBarForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AddressBarBorderBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="AddressBarFocusBorderBrush" Color="#007ACC"/>
    
    <!-- Tab Colors -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="TabForegroundBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TabActiveForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="NewTabButtonBrush" Color="#4A4A4A"/>
    
    <!-- Window Control Button Styles -->
    <Style x:Key="WindowControlButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ControlButtonForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ControlButtonHoverBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#4A4A4A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Close Button Style (Red hover) -->
    <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="0,8,0,0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource CloseButtonHoverBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#C50E1F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Navigation Button Style -->
    <Style x:Key="NavigationButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource NavigationButtonForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource NavigationButtonHoverBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#4A4A4A"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Address Bar Style -->
    <Style x:Key="AddressBarStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource AddressBarBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource AddressBarForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AddressBarBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0,0,0,0"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="34"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Decorative Star Symbol -->
                            <TextBlock Grid.Column="0"
                                      Text="âœ¦"
                                      Foreground="{StaticResource AddressBarForegroundBrush}"
                                      FontSize="14"
                                      VerticalAlignment="Center"
                                      Margin="8,0,4,0"
                                      Opacity="0.7"/>
                            
                            <!-- Address Bar Input -->
                            <ScrollViewer Grid.Column="1"
                                         x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"
                                         VerticalAlignment="Center"
                                         VerticalScrollBarVisibility="Hidden"
                                         HorizontalScrollBarVisibility="Auto"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AddressBarFocusBorderBrush}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#6A6A6A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Scrollbar Styles for Dark Theme (Browser-like) -->
    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="Foreground" Value="#555555"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Margin="2"/>
                        <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="2">
                            <Track.Thumb>
                                <Thumb Background="#555555" 
                                       BorderThickness="0">
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="6"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#777777"/>
                                                </Trigger>
                                                <Trigger Property="IsDragging" Value="True">
                                                    <Setter Property="Background" Value="#999999"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2A2A2A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Tab Styles -->
    <Style x:Key="TabItemStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource TabBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TabForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="BorderBrush" Value="{StaticResource TabBorderBrush}"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="MinWidth" Value="180"/>
        <Setter Property="MaxWidth" Value="240"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6,6,0,0"
                            Name="PART_Border">
                        <Grid>
                            <!-- Content overlay that doesn't interfere with hit testing -->
                            <Grid Margin="12,0,28,0" IsHitTestVisible="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Favicon placeholder -->
                                <Ellipse Grid.Column="0" 
                                        Width="12" Height="12"
                                        Fill="#666"
                                        VerticalAlignment="Center"/>
                                
                                <!-- Tab title -->
                                <TextBlock Grid.Column="1"
                                          Text="{TemplateBinding Content}"
                                          Foreground="{TemplateBinding Foreground}"
                                          FontSize="{TemplateBinding FontSize}"
                                          FontFamily="{TemplateBinding FontFamily}"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          TextTrimming="CharacterEllipsis"/>
                            </Grid>
                            
                            <!-- Close button positioned absolutely -->
                            <Button x:Name="CloseTabButton"
                                   Width="20" Height="20"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,4,0"
                                   Cursor="Hand"
                                   Content="Ã—"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="{TemplateBinding Foreground}"
                                   Padding="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                CornerRadius="3"
                                                Width="20" Height="20">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E81123"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#C50E1F"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <!-- Invisible overlay to ensure entire tab area is clickable -->
                            <Border Background="Transparent" 
                                   Margin="0,0,24,0"
                                   Cursor="Hand"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource TabHoverBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="Active">
                            <Setter Property="Background" Value="{StaticResource TabActiveBackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TabActiveForegroundBrush}"/>
                            <Setter Property="BorderThickness" Value="1,1,1,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- New Tab Button Style -->
    <Style x:Key="NewTabButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ControlButtonForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="4,8,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <Path Data="M6,2 L6,10 M2,6 L10,6" 
                              Stroke="{TemplateBinding Foreground}" 
                              StrokeThickness="2"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource NewTabButtonBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#5A5A5A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>